{
  "name": "@knocklabs/cli",
  "version": "0.2.4",
  "description": "Knock CLI",
  "author": "@knocklabs",
  "bin": {
    "knock": "./bin/run.js"
  },
  "homepage": "https://github.com/knocklabs/knock-cli",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "knocklabs/knock-cli",
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@knocklabs/mgmt": "^0.8.0",
    "@oclif/core": "^3",
    "@oclif/plugin-help": "^6",
    "@prantlf/jsonlint": "^14.1.0",
    "axios": "^1.12.2",
    "date-fns": "^2.30.0",
    "enquirer": "^2.4.1",
    "find-up": "^5.0.0",
    "fs-extra": "^11.3.2",
    "liquidjs": "^10.21.1",
    "locale-codes": "^1.3.1",
    "lodash": "^4.17.21",
    "open": "8.4.2",
    "quicktype-core": "^23.2.6",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@oclif/test": "^3",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.5",
    "@swc/helpers": "^0.5.17",
    "@types/chai": "^4",
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.22",
    "chai": "^4",
    "eslint": "^7.32.0",
    "eslint-config-oclif": "^4",
    "eslint-config-oclif-typescript": "^1.0.3",
    "eslint-config-prettier": "^8.10.2",
    "eslint-plugin-prettier": "^4.2.5",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "mocha": "^10",
    "nock": "^13.5.6",
    "oclif": "^4",
    "prettier": "2.8.8",
    "shx": "^0.4.0",
    "sinon": "^16.1.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "oclif": {
    "bin": "knock",
    "dirname": "knock",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": " ",
    "topics": {
      "commit": {
        "description": "Commit or promote changes."
      },
      "guide": {
        "description": "Manage in-app guides."
      },
      "message-type": {
        "description": "Manage message types for guides."
      },
      "partial": {
        "description": "Manage template partials."
      },
      "workflow": {
        "description": "Manage notification workflows."
      },
      "translation": {
        "description": "Manage translation files."
      },
      "layout": {
        "description": "Manage email layouts."
      }
    }
  },
  "scripts": {
    "build": "shx rm -rf dist && swc src -d dist --strip-leading-paths",
    "lint": "eslint . --ext .ts --config .eslintrc.json",
    "lint.fix": "yarn run lint --fix",
    "format": "prettier \"src/**/*.+(ts|js)\" \"test/**/*.+(ts|js)\"",
    "format.write": "yarn run format --write",
    "format.check": "yarn run format --check",
    "type.check": "tsc",
    "postpack": "shx rm -f oclif.manifest.json",
    "prepack": "yarn build && oclif manifest && oclif readme",
    "test": "mocha \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md",
    "check": "yarn run lint && yarn run format.check && yarn run type.check"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "bugs": "https://github.com/knocklabs/knock-cli/issues",
  "keywords": [
    "oclif"
  ],
  "types": "dist/index.d.ts"
}
